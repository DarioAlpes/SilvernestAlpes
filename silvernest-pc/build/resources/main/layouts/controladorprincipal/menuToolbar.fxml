<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<fx:root
        xmlns="http://javafx.com/javafx/8.0.112"
        xmlns:fx="http://javafx.com/fxml/1"
        type="javafx.scene.layout.VBox"
        style="-fx-background-color: WHITE">

    <JFXButton fx:id="botonSincronizar"
               styleClass="item-menu-de-toolbar"
               VBox.vgrow="NEVER"
               prefHeight="40"
               prefWidth="210"
               text="">
        <graphic>
            <HBox alignment="CENTER_LEFT" spacing="7">
                <FontAwesomeIconView glyphName="REFRESH" size="1.5em"/>

                <Label text="Sincronizar datos"/>
            </HBox>
        </graphic>
    </JFXButton>

    <JFXButton fx:id="botonSeleccionarUbicacion"
               styleClass="item-menu-de-toolbar"
               VBox.vgrow="NEVER"
               prefHeight="40"
               prefWidth="210"
               text="">
        <graphic>
            <HBox alignment="CENTER_LEFT" spacing="7">
                <FontAwesomeIconView glyphName="MAP_MARKER" size="1.5em"/>

                <Label text="Seleccionar ubicación"/>
            </HBox>
        </graphic>
    </JFXButton>

    <JFXButton fx:id="botonCerrarSesion"
               styleClass="item-menu-de-toolbar"
               VBox.vgrow="NEVER"
               prefHeight="40"
               prefWidth="210"
               text="">
        <graphic>
            <HBox alignment="CENTER_LEFT" spacing="7">
                <FontAwesomeIconView glyphName="SIGN_OUT" size="1.5em"/>

                <Label text="Cerrar Sesión"/>
            </HBox>
        </graphic>
    </JFXButton>

    <stylesheets>
        <URL value="@/css/estilo.css"/>
    </stylesheets>

</fx:root>